# Mail server configuration for bdgsoftware.cloud

# Domain and hostname
HOSTNAME=mail.bdgsoftware.cloud
DOMAINNAME=bdgsoftware.cloud

# SSL/TLS Configuration
SSL_TYPE=letsencrypt
SSL_CERT_PATH=/etc/letsencrypt/live/mail.bdgsoftware.cloud/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/mail.bdgsoftware.cloud/privkey.pem

# Enable services
ENABLE_SMTP=1
ENABLE_IMAP=1
ENABLE_POP3=0
ENABLE_SUBMISSION=1
ENABLE_SMTPS=1
ENABLE_IMAPS=1

# Security settings
ENABLE_SPAMASSASSIN=1
ENABLE_CLAMAV=1
ENABLE_FAIL2BAN=1
ENABLE_POSTGREY=1
ENABLE_AMAVIS=1

# Authentication
ENABLE_SASLAUTHD=0
ENABLE_LDAP=0

# Postfix settings
POSTFIX_MESSAGE_SIZE_LIMIT=52428800  # 50MB
POSTMASTER_ADDRESS=postmaster@bdgsoftware.cloud

# Dovecot settings
ENABLE_QUOTAS=1
DOVECOT_QUOTA_WARN=85
DOVECOT_QUOTA_WARN2=90

# Network settings
NETWORK_INTERFACE=eth0
PERMIT_DOCKER=network

# Logs
LOG_LEVEL=info

# Additional security
ENABLE_OPENDKIM=1
ENABLE_OPENDMARC=1
ENABLE_POLICYD_SPF=1

# Let's Encrypt settings
ENABLE_UPDATE_CHECK=1
UPDATE_CHECK_INTERVAL=1d

# Multi-domain support
ENABLE_MULTI_DOMAIN=1

# User management
ENABLE_MANAGESIEVE=1
